<!DOCTYPE html>
<html>
<head>
	<title>Welcome to My Website</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<style>
		.header {
			border-radius: 20px;
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 20px;
			background-color: #333;
			color: #fff;
		}
		.logout {
			color: #fff;
			text-decoration: none;
			font-weight: bold;
			border: 2px solid #fff;
			padding: 5px 10px;
			border-radius: 5px;
		}
		.logout:hover {
			background-color: #fff;
			color: #333;
		}
		.flex-container {
			display: flex;
			/* background-color: DodgerBlue; */
		}

		.flex-container > div {
			background-color: #f1f1f1;
			text-align: center;
			width: 50%;
			margin: 10px auto;
			padding: 20px;
			font-size: 30px;
			background-color: #fff;
			border-radius: 20px;
			box-shadow: 0px 0px 10px 2px rgba(0,0,0,0.1);
		}

		.flex-container > div:hover {
			background-color: #D8D8D8;
		}

		input[type=text], input[type=password] {
			width: 100%;
			padding: 12px 20px;
			margin: 8px 0;
			display: inline-block;
			border: 1px solid #ccc;
			border-radius: 4px;
			box-sizing: border-box;
		}

		button {
			background-color: #4CAF50;
			color: #fff;
			padding: 12px 20px;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			width: 100%;
		}
		button:hover {
			background-color: #45a049;
		}
	</style>
</head>
<body>
	<header class="header">
		<h1>Welcome to My Website</h1>
		<a href="#" class="logout">Logout</a>
	</header>
	
	<p id="message">
		<%= locals.status %>
	</p>

	<div class="flex-container">
		<div id="demo"><button onclick="getLocation()">give my location</button></div>
	</div>

	<main>
		<h2>Welcome <%= locals.user_name %></h2>
		<p>Thank you for visiting our website.</p>
	</main>

	<div class="flex-container">
		<div onclick="addRentalForm()">Add Rental Frim</div>
		<div onclick="addDriverForm()">Add Driver</div>
	</div>
	  
</body>
</html>

<script>

	var message = document.getElementById('message').innerHTML;
	document.getElementById('message').innerHTML = '';
	message.trim();
	console.log(message.trim());
	console.log('hi');
	var temp = String(message.trim());
	if(temp === ""){
		console.log(message.trim() + ' ' + String(message.trim()).localeCompare(""));
		console.log('hi');
	}
	else{
		alert(message);
	}

	function getLocation() {
		document.getElementById("demo").innerHTML = "Calculating...";
		if (navigator.geolocation) {
			navigator.geolocation.getCurrentPosition(showPosition);
		} else {
			document.getElementById("demo").innerHTML = "Geolocation is not supported by this browser.";
		}
	}

	function showPosition(position) {
		document.getElementById("demo").innerHTML = "Latitude: " + position.coords.latitude +
		"<br>Longitude: " + position.coords.longitude;
	}


	function addRentalForm(){
		document.getElementsByClassName("flex-container")[1].innerHTML = `<div class="displayForm"><h2>Add Rental Frim??</h2>
			<form action="/createAccount_rentalFirm" method="post">
			Name : <input type="text" name="name" required><br><br>
			UserName : <br>
			<input type="text" name="user_name" required><br><br>
			email : <br>
			<input type="text" name="email" required><br><br>
			password : <br>
			<input type="password" name="password" required><br><br>
			
			<button type="submit" >Create Account</button><br><br>
		</form></div>`;

		document.getElementsByClassName("displayForm")[0].style.backgroundColor = "#fff";
		document.getElementsByClassName("displayForm")[0].style.textAlign = "left";
		document.getElementsByClassName("displayForm")[0].style.fontSize = "20px";
	}


	function addDriverForm(){
		document.getElementsByClassName("flex-container")[1].innerHTML = `<div class="displayForm"><h2>Add Driver??</h2>
			<form action="/createAccount_driver" method="post">
			Name : <input type="text" name="name" required><br><br>
			UserName : <br>
			<input type="text" name="user_name" required><br><br>
			phone : <br>
			<input type="text" name="email" required><br><br>

			<button type="submit" >Create Account</button><br><br>
		</form></div>`;

		document.getElementsByClassName("displayForm")[0].style.backgroundColor = "#fff";
		document.getElementsByClassName("displayForm")[0].style.textAlign = "left";
		document.getElementsByClassName("displayForm")[0].style.fontSize = "20px";
	}
</script>
